<?xml version="1.0" encoding="UTF-8" ?>
<component name="ContentHero" extends="Group">
    <script type="text/brightscript" uri="ContentHero.brs" />
    <script type="text/brightscript" uri="pkg:/source/enums/ContentTypeEnum.brs" />
    <interface>
        <field id="content" type="node" onChange="onContentChange" />
    </interface>
    <children>
        <Poster id="image"
            translation="[600, 0]"
            loadWidth="600"
            loadHeight="402"
            loadDisplayMode="scaleToFit" />

        <LayoutGroup
            itemSpacings="[15]">
            <AppLabel id="title"
                fontUri="pkg:/fonts/SofiaSans-Bold.ttf"
                fontSize="60"
                width="900"
                maxLines="2"
                wrap="true" />
            <AppLabel id="description"
                fontUri="pkg:/fonts/SofiaSans-Light.ttf"
                width="900"
                fontSize="24"
                maxLines="4"
                wrap="true" />
            <LayoutGroup
                layoutDirection="horizontal"
                itemSpacings="[9]">
                <AppLabel id="firstColumnLabel"
                    fontUri="pkg:/fonts/SofiaSans-Regular.ttf"
                    fontSize="21"
                    width="111" />
                <AppLabel id="ingredientList"
                    fontUri="pkg:/fonts/SofiaSans-Bold.ttf"
                    fontSize="27"
                    width="330"
                    maxLines="18"
                    wrap="true" />
                <AppLabel id="secondColumnLabel"
                    fontUri="pkg:/fonts/SofiaSans-Regular.ttf"
                    fontSize="21"
                    width="111" />
                <AppLabel id="instructionList"
                    fontUri="pkg:/fonts/SofiaSans-Bold.ttf"
                    fontSize="27"
                    width="450"
                    maxLines="18"
                    wrap="true" />
            </LayoutGroup>
        </LayoutGroup>
    </children>

</component>