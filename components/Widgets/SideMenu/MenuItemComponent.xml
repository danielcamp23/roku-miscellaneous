<?xml version="1.0" encoding="UTF-8" ?>
<component name="MenuItemComponent" extends="Group">
    <script type="text/brightscript" uri="MenuItemComponent.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChange" />
        <field id="itemHasFocus" type="boolean" onChange="onItemFocusChange" alwaysNotify="true" />
        <field id="groupHasFocus" type="boolean" />
    </interface>
    <children>
        <LayoutGroup id="container"
            layoutDirection="horizontal"
            itemSpacings="[12]"
            vertAlignment="center">
            <Label id="title" />
            <Poster id="icon"
                width="60"
                height="60"
                opacity="0.3" />
            </LayoutGroup>
    </children>

</component>
